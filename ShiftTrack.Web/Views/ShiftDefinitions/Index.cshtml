@model List<ShiftTrack.Web.Models.ShiftDefinitionDto>

    @{
    ViewData["Title"] = "Mesai Tanýmlarý";
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Mesai Tanýmlarý</h3>
        <a class="btn btn-primary" asp-action="Create">Yeni Mesai</a>
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>Mesai Baþlangýcý</th>
                <th>Mesai Bitiþi</th>
                <th>Mola Baþlangýcý</th>
                <th>Mola Bitiþi</th>
                <th>Fazla Mesai</th>
                <th style="width: 180px;">Ýþlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr id="row-@item.Id">
                <td>@item.StartTime.ToString("HH:mm")</td>
                <td>@item.EndTime.ToString("HH:mm")</td>
                <td>@item.BreakStartTime.ToString("HH:mm")</td>
                <td>@item.BreakEndTime.ToString("HH:mm")</td>
                <td>@(item.IsOvertimeEligible ? "Hak eder" : "Hak etmez")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <button class="btn btn-sm btn-danger btn-delete" data-id="@item.Id">Sil</button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @section Scripts {
        <script src="~/js/shiftdefinitions.js" asp-append-version="true"></script>
    }
