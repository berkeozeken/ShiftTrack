@model ShiftTrack.Web.Models.ShiftDefinitionDto

@{
    ViewData["Title"] = "Mesai Düzenle";
}

<h3>Mesai Düzenle</h3>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-3 mb-3">
            <label class="form-label">Mesai Baþlangýcý</label>
            <input class="form-control" type="time" asp-for="StartTime" />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Mesai Bitiþi</label>
            <input class="form-control" type="time" asp-for="EndTime" />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Mola Baþlangýcý</label>
            <input class="form-control" type="time" asp-for="BreakStartTime" />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Mola Bitiþi</label>
            <input class="form-control" type="time" asp-for="BreakEndTime" />
        </div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="IsOvertimeEligible" />
        <label class="form-check-label">Fazla mesai hak eder</label>
    </div>

    <button class="btn btn-primary" type="submit">Güncelle</button>
    <a class="btn btn-secondary" asp-action="Index">Ýptal</a>
</form>
